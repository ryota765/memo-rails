<h1><%= @memo.title %></h1>
<p><%= @memo.body %></p>

<ul>
  <li><%= link_to "Edit", edit_memo_path(@memo) %></li>
  <li><%= link_to "Destroy", memo_path(@memo),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>

<h2>Comments</h2>
<%= render @memo.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>